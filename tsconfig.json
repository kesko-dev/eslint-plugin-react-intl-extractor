{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "",
      "typeRoots": ["node_modules/@types"],
      "rootDirs": ["src"],
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }
